<% if @pins.blank? %>
  <div class="jumbotron center">
    <h2>Sorry you don't have any pins just yet, would you like to create one ?</h2>
    <p>
      <%= link_to "Create", new_pin_path, class: "btn btn-default btn-lg" %>
      <%= link_to "Back to Users ?", users_path, class: "btn btn-primary btn-lg" %>
    </p>
  </div> 
<% else %>

  <div class="panel dock form panel-heading center green">
    <section class="dock-title">
      <h2>Welcome to your dock <%= current_user.name %></h2>
      <%= image_tag avatar_url(current_user) %>
    </section>
    <section> <span class="dock-relationship-status-title">Social Status</span>
      <%= render 'shared/stats' %> 
    </section>
  </div>
  <center>
    <h2 class="follow-show">Your Movies</h2>
  </center>
  <div id="pins" class="transitions-enabled">
    <% @pins.each do |pin| %>
      <div class="box panel panel-default">
        <%= link_to image_tag(pin.image.url(:medium)), pin %>
        <div class="panel-body">
          <p><%= pin.description %></p>
          <p><strong><%= pin.user.name if pin.user %></strong></p>
          <% if current_user && pin.user == current_user %>
            <div class="actions">
              <%= link_to edit_pin_path(pin) do %>
                <span class="glyphicon glyphicon-edit"></span>
                Edit
              <% end %>
              <%= link_to pin, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <span class="glyphicon glyphicon-trash"></span>
                Delete
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

<div class="center">
  <%= will_paginate @pins, renderer: BootstrapPagination::Rails %>
</div>