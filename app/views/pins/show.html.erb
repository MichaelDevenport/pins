<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading center-show">
        <div class="movie-box">
          <p><strong><i>Star Rating Score Box</i></strong></p>
          <div class="show-img">
            <%= image_tag @pin.image.url(:large) %>
          </div>
          <div class="star-rating" data-score= <%= @avg_review %> ><strong><i class="padding">Rated Score</i></strong></div>
        </div>
      </div>
      <div class="panel-body">
        
        <div class="title-link-btn center">
          <h1 class="review_title center"><%= @pin.title %></h1>
          <span class:="center"> <%= link_to " link", @pin.link, target: "none", class: "btn btn-primary fa fa-external-link" %> <i class="fa fa-hand-o-left"> Click Me !</i></span>
        </div>
        <hr>
        <span><h4><%= @pin.catergory.name if @pin.catergory %></h4></span>    
        <h5>Movie Description</h5>
        <p><%= @pin.description %></p>
        <h6>Provided by : <%= @pin.user.name if @pin.user %></h6>
        <span class="timestamp">
          Posted <%= time_ago_in_words(@pin.created_at) %> ago.
        </span>
        <div class="votable">
          <%= link_to like_pin_path(@pin), method: :get, class: "vote-up" do %>
            <span class="fa fa-thumbs-o-up fa-2x"></span>
          <% end %>
          <%= pluralize(@pin.get_upvotes.size, "Like") %>
          <%= link_to dislike_pin_path(@pin), method: :get, class: "vote-down" do %>
            <span class="fa fa-thumbs-o-down fa-2x"></span>
          <% end %>  
            <%= pluralize(@pin.get_downvotes.size, "Dislike") %>
        </div>
        <h4 class="reviews-title"><strong>Latest ratings & reviews</strong></h4>
        <% if @reviews.blank? %>
          <h3>No reviews just yet, would you like to be the first ?</h3>
        <% else %>
          <% @reviews.each do |review| %>
            <div class="reviews">
              <div class="star-rating" data-score= <%= review.rating %> ></div>
              <p><%= review.comment %></p>
            </div>
          <% end %>
        <% end %>
        <p class="review-footer"><%= link_to "Write a Review", new_pin_review_path(@pin), class: "btn btn-default" %>
        <% if @pin.user == current_user %>
          <%= link_to edit_pin_path(@pin) do %>
            <span class="glyphicon glyphicon-edit"></span>
            Edit
          <% end %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  $('.star-rating').raty({
      path: '/assets/',
      readOnly: true,
      score: function() {
        return $(this).attr('data-score');
    }
  });
</script>

