<% provide(:title, "Show") %>
<div class="row">
  <div>
    <div id="zoom-content">
      <div class="panel panel-default show-container">
        <div class="panel-heading center-show">
          <div class="movie-box">
            <p><%= render_shareable :buttons=> [ 'pinterest' ] %><%= render_shareable :buttons=> [ 'facebook' ] %><</p>
            <div class="show-img">
              <%= image_tag @pin.image.url(:large) %>
            </div>
            <div class="star-rating" data-score= <%= @avg_review %> ><strong><i class="padding">Rated Score</i></strong></div>
          </div>
        </div>
        <div class="panel-body">
         
          <div class="title-link-btn center">
            <h1 class="review_title center"><%= @pin.title %></h1>
            <span class:="center"><a class="btn btn-primary audioButton" href="#random-movie" role="button">Random Movie</a>
                                 <%= link_to "I want this Movie", @pin.link, target: "none", class: "btn btn-primary audioButton" %> 
                                 <a class="btn btn-primary audioButton" href="#Media-Player" role="button">Media Player</a></span>
          </div>
          <hr>
          <span><h4><%= @pin.catergory.name if @pin.catergory %></h4></span>    
          <h5>Movie Description</h5>
          <p><%= @pin.description %></p>
          <h6>Provided by : <%= @pin.user.name if @pin.user %></h6>
          <span class="timestamp">
            Posted <%= time_ago_in_words(@pin.created_at) %> ago.
          </span>
          <!-- Vote buttons and count display below ======== -->
          <div class="audioButton">
            <%= render 'pins/voting' %>
          </div>
          <h4 class="reviews-title"><strong>Latest rates & reviews</strong></h4>
          <% if @reviews.blank? %>
            <h3>No reviews just yet, would you like to be the first ?</h3>
          <% else %>
            <% @reviews.each do |review| %>
              <div class="reviews">
                <div class="star-rating" data-score= <%= review.rating %> ></div>
                <p><%= review.comment %></p>
              </div>
            <% end %>
          <% end %>
          <p class="review-footer"><%= link_to "Rate & Review", new_pin_review_path(@pin), class: "btn btn-default audioButton" %> 
          <% if @pin.user == current_user %>
            <%= link_to edit_pin_path(@pin) do %>
              <span class="glyphicon glyphicon-edit"></span>
              Edit
            <% end %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<a name="random-movie"></a>

<script>
  $('.star-rating').raty({
      path: '/assets/',
      readOnly: true,
      score: function() {
        return $(this).attr('data-score');
    }
  });
</script>


<div class="container marketing">

  <hr class="featurette-divider">

  <div class="featurette">
    <div class="featurette-image img-thumbnail pull-right audioButton">
      <%= link_to (image_tag @random_pin.image.url(:medium)), pin_path(@random_pin) %>
    </div> 
    <h2 class="featurette-heading">Random. <span class="text-muted">Video.</span></h2>
    <p class="lead">Click this Video to view its, title description and get the link. 
                    We have thousands of the latest Videos and lots added every day. 
                    Go ahead give the Video to your right a click to start browsing our mega collection.</p>
  </div>

  <hr class="featurette-divider">

  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="panel-title player">
        <% if @pin.yt_uid.blank? %> 
          <h3><%= image_tag("youtube-copy.png", alt: "Youtube movies", :size => "100x70", class: "yt-img") %>
                                           Video 2015 <%= render_shareable :buttons=> [ 'facebook' ] %></h3> 
        <% else %>
          <h3><%= @pin.user.name if @pin.user %> <%= image_tag("youtube-copy.png", alt: "Youtube movies", :size => "100x70", class: "yt-img") %>
                                                                                         <%= render_shareable :buttons=> [ 'facebook' ] %></h3> 
        <% end %> 
      </div>
    </div>
    <a name="Media-Player"></a>
    <div class="panel-body">
      <% if @pin.yt_uid.blank? %>
        <!-- 16:9 aspect ratio -->
        <div class="embed-responsive embed-responsive-16by9">
          <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/BaGmXiN1PQ8" allowfullscreen></iframe>
        </div>
      <% else %>
        <div class="embed-responsive embed-responsive-16by9">
          <iframe class="embed-responsive-item" src="//www.youtube.com/embed/<%= @pin.yt_uid %>" frameborder="0" allowfullscreen></iframe>
        </div>
      <% end %>
    </div>
    <div class="panel-footer">
      <p class="pull-right"><a href="#"></a></p>
      <p><a> <%= link_to image_tag("youtube-icon.png", class: "audioButton", alt: "Youtube movies"), 'https://www.youtube.com/channel/UCAJ2KpG4wVeLbrJk4fAkI1Q', target: "none" %></a>
                                                                                            <i class="fa fa-hand-o-left"> Click Me ! i'm a link to the Youtube movie channel.</i></p>
    </div>
  </div>
 
  <hr class="featurette-divider">
</div><!-- /.container -->
