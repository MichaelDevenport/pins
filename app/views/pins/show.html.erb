<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading center-show">
        <div class="movie-box">
          <p><strong><%= @pin.title %></strong></p>
          <div class="show-img">
            <%= image_tag @pin.image.url(:medium) %>
          </div>
          <div class="star-rating" data-score= <%= @avg_review %> ></div>
          <span><i>all reviews average</i></span>
        </div>
      </div>
      <div class="panel-body show">  
        <p><%= link_to "Visit link", @pin.link, target: "none", class: "btn btn-danger" %></p> 
        <h6>Provided by : <%= @pin.user.name if @pin.user %></h6>

        <h1 class="review_title"><%= @pin.title %></h1>
        <p><%= @pin.description %></p>
        <h4 class="reviews-title"><strong>Latest reviews</strong></h4>
        <% if @reviews.blank? %>
          <h3>No reviews just yet, would you like to be the first ?</h3>
        <% else %>
          <% @reviews.each do |review| %>
            <div class="reviews">
              <div class="star-rating" data-score= <%= review.rating %> ></div>
              <p><%= review.comment %></p>
            </div>
          <% end %>
        <% end %>
        <p class="review-footer"><%= link_to "Write a Review", new_pin_review_path(@pin), class: "btn btn-default" %>
        <% if @pin.user == current_user %>
          <%= link_to edit_pin_path(@pin) do %>
            <span class="glyphicon glyphicon-edit"></span>
            Edit
          <% end %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  $('.star-rating').raty({
      path: '/assets/',
      readOnly: true,
      score: function() {
        return $(this).attr('data-score');
    }
  });
</script>

