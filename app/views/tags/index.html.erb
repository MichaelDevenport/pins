<% provide(:title, "all tags") %>

<div id="primary-content">
	<div class="panel center form audioButton">
		<div class="panel-heading green">
      <div class="panel-title">
        <h3>All tags, listed most recently created first</h3>
      </div>
    </div>
		<div class="panel-body ">
			<table class="table-users">
				<% @tags.each do |tag| %>
					<p>
					  <%= link_to tag.name, tag_path(tag) %> belongs to
					  <%= pluralize(tag.pins.size, 'pin') %>
					</p>
				<% end %>
			</table>
		</div>
		<p>
		  <%= link_to '<< Back to Pins', pins_path, class: "btn btn-default btn-xs" %>
		  <button type="button" class="btn btn-default btn-xs" data-toggle="offcanvas" data-target="#myNavmenu" data-canvas="body">
	      <i class="fa fa-toggle-on"></i>
	    </button>
		</p>
	</div>
</div>

<hr class="featurette-divider">

