<div class="landing">
  <div class="container-landing">
    
    <h1 class="landing-h1">WEBrip Video</h1>
    <h2 class ="landing-h2">The best links to the best Videos</h2>

    <hr class="featurette-divider">
    <%= link_to "Members Sign in", new_user_session_path, class: "btn btn-success btn-lg btn-block" %> 
    <%= link_to "Latest Videos", root_path, class: "btn btn-warning btn-lg btn-block" %>
    <%= link_to "Adult R18", "#", class: "btn btn-danger btn-lg btn-block" %>

    <hr class="featurette-divider">

    <div class="featurette">
      <div class="featurette-image img-thumbnail pull-right">
        <%= link_to (image_tag @random_pin.image.url(:medium)), pin_path(@random_pin) %>
      </div> 
      <h2 class="featurette-heading">Random <span class="text-muted">Video</span></h2>
      <p class="lead">Click this movie to see more..</p>
    </div>

    

    <hr class="featurette-divider">
    
    <%= form_tag charges_path, id: 'chargeForm' do %>
      <script src="https://checkout.stripe.com/checkout.js"></script>
      <%= hidden_field_tag 'stripeToken' %>
      <%= hidden_field_tag 'stripeEmail' %>
      <%= hidden_field_tag 'amount', 499 %> 
      <button id="btn-buy" type="button" class="btn btn-default btn-lg btn-block"><span class="glyphicon glyphicon-ok"></span> Create my subscription plan!</button>
      <script>
        var handler = StripeCheckout.configure({
          key: '<%= Rails.configuration.stripe[:publishable_key] %>',
          token: function(token, arg) {
            document.getElementById("stripeToken").value = token.id;
            document.getElementById("stripeEmail").value = token.email;
            document.getElementById("chargeForm").submit();
          }
        });
        document.getElementById('btn-buy').addEventListener('click', function(e) {
          handler.open({
            name: 'WEBrip.tv Subscription',
            description: 'Get unlimited access to WEBrip.tv',
            amount: document.getElementById("amount").value
          });
          e.preventDefault();
        })
      </script>
    <% end %>

  </div><!-- .container-landing -->
</div>  

	